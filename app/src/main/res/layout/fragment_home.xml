<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/themeBlue">
        <TextView
            android:id="@+id/htv_selectcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaultcity"
            android:textSize="@dimen/defaultcity_textsize"
            android:padding="@dimen/def_textsize_marleft"
            android:textColor="@color/white_color"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/icon_title_down_arrow"
            />
    </LinearLayout>


    <ListView
        android:id="@+id/lv_homenews"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>